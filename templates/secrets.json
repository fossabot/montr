	"Authentication:Google:ClientId": "",
	"Authentication:Google:ClientSecret": "",

	"Authentication:Facebook:AppId": "",
	"Authentication:Facebook:AppSecret": "",

	"Authentication:Microsoft:ClientId": "",
	"Authentication:Microsoft:ClientSecret": "",

	// App connection strings
	"ConnectionStrings": {
		// Default connection string
		"Default": "Server=localhost;Port=5432;Database=montr;User Id=postgres;Password=secret;",
		// Connection string used for migration
		"Migration": "Server=localhost;Port=5432;Database=montr;User Id=postgres;Password=secret;"
	},

	// Default system administrator email (used as login) and password
	// Used at first system start to create administraton user
	// Section can be removed after first system startup
	"Montr.Idx.Options": {
		"DefaultAdminEmail": "admin@acme.com",
		"DefaultAdminPassword": "secret"
	},

	// Default company name created on first system start
	"Montr.Kompany.Options": {
		"DefaultCompanyName": "Montr, Inc."
	},

	// Smtp client settings
	"Montr.Messages.Options": {
		"TestMode": true,
		"TestAddress": "test@acme.com",
		"From": "notification@acme.com",
		"Host": "smtp.acme.com",
		"Port": 587,
		"UseSsl": true,
		"UserName": "contact@acme.com",
		"Password": "secret"
	}
}
