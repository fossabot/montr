{
	"compilerOptions": {
		"lib": [
			"dom",
			"es7"
		],
		"sourceMap": true,
		"noImplicitAny": true,
		// "strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true, // for i18next
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es5",
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@montr-core/*": [
				"modules/montr-core/*"
			],
			"@montr-master-data/*": [
				"modules/montr-master-data/*"
			],
			"@montr-kompany/*": [
				"modules/montr-kompany/*"
			],
			"@montr-tendr/*": [
				"modules/montr-tendr/*"
			]
		}
	},
	"files": [],
	"include": [
		"modules/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
